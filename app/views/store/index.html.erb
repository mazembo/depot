<table cellpading="5" cellspacing="0">
<% for product in @products %>
<tr valign="top">
<td>
  <img src="<%= product.image_url %>"/>
</td>
<td width="450">
<h3> <%=h product.title %> <h3>
<small>
<%= product.description %>
</small>
<br/>
<strong> $<%= sprintf("%0.2f", product.price) %></strong>
<%= link_to "Add to Cart", 
			:action => "add_to_cart",
			:id     => product %>
<br/>
</td>
</tr>
<tr> <td colspan ="2"><hr/> </td></tr>
<% end %>
</table>